<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NAIL_SALON.Models.Components.Customer"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="NAIL_SALON.Models.Components.Customer.CustomerUC"
             mc:Ignorable="d" d:DesignWidth="800"
             Background="White" Height="250"
            
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="53*"/>
                <RowDefinition Height="73*"/>
                <RowDefinition Height="70*"/>
                <RowDefinition Height="54*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150*"/>
                <ColumnDefinition Width="245*"/>
                <ColumnDefinition Width="113*"/>
                <ColumnDefinition Width="292*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Customer name" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="38" Width="136" HorizontalContentAlignment="Right" BorderBrush="{DynamicResource MaterialDesignShadowBrush}"/>
            <Label Content="Phone Number" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="38" Width="136" HorizontalContentAlignment="Right" BorderBrush="{DynamicResource MaterialDesignShadowBrush}" Grid.Row="1"/>
            <Label Content="BirthDay" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="38" Width="136" HorizontalContentAlignment="Right" BorderBrush="{DynamicResource MaterialDesignShadowBrush}" Grid.Row="2"/>
            <Label Content="Address" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="38" Width="92" HorizontalContentAlignment="Right" BorderBrush="{DynamicResource MaterialDesignShadowBrush}" Grid.Column="2"/>
            <Label Content="City" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="38" Width="92" HorizontalContentAlignment="Right" BorderBrush="{DynamicResource MaterialDesignShadowBrush}" Grid.Column="2" Grid.Row="1"/>
            <Label Content="District" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="38" Width="92" HorizontalContentAlignment="Right" BorderBrush="{DynamicResource MaterialDesignShadowBrush}" Grid.Column="2" Grid.Row="2"/>
            <TextBox Text="{Binding CurrentCustomer.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" VerticalContentAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="226" FontSize="16" Height="30"/>
            <TextBox Text="{Binding CurrentCustomer.Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" VerticalContentAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="226" FontSize="16" Grid.Row="1" Height="30"/>
            <TextBox Text="{Binding CurrentCustomer.Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="3" VerticalContentAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="234" FontSize="16" Height="30"/>
            <DatePicker SelectedDate="{Binding CurrentCustomer.BirthDay, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" FontSize="16" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="225" Height="30"/>
            <ComboBox
                Grid.Column="3"
                Grid.Row="1"    
                materialDesign:HintAssist.Hint="Chose City"
                ItemsSource="{Binding AllCities}"   
                SelectedItem="{Binding SelectedCity}"
                DisplayMemberPath="CityName"
                SelectedValuePath="ID"
                SelectedValue="{Binding CurrentCustomer.CityId, Mode=TwoWay}"
                Style="{StaticResource MaterialDesignOutlinedComboBox}" Height="46" Margin="19,0,21,0">
            </ComboBox>
            
            <ComboBox
                Grid.Row="2"
                Grid.Column="3"               
                materialDesign:HintAssist.Hint="Chose District"
                ItemsSource="{Binding Districts}"
                DisplayMemberPath="DistrictName"
                SelectedValuePath="ID"
                SelectedValue="{Binding CurrentCustomer.DistrictId, Mode=TwoWay}"
                Style="{StaticResource MaterialDesignOutlinedComboBox}" Height="46" Margin="19,0,21,0">

            </ComboBox>
            
        </Grid>
    </Grid>
</UserControl>
