<UserControl x:Class="NAIL_SALON.Models.Components.Product.ProductUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NAIL_SALON.Models.Components.Product"
             mc:Ignorable="d" 
             xmlns:materialDesignExtensions="http://materialdesigninxaml.net/winfx/xaml/extensions"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="300" d:DesignWidth="800"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="58*"/>
                <RowDefinition Height="63*"/>
                <RowDefinition Height="99*"/>
                <RowDefinition Height="80*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="127*"/>
                <ColumnDefinition Width="268*"/>
                <ColumnDefinition Width="98*"/>
                <ColumnDefinition Width="307*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Product Name" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="38" Width="128" HorizontalContentAlignment="Right" BorderBrush="{DynamicResource MaterialDesignShadowBrush}"/>
            <Label Content="Price" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="38" Width="128" HorizontalContentAlignment="Right" BorderBrush="{DynamicResource MaterialDesignShadowBrush}" Grid.Row="1"/>
            <Label Content="Description" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Height="38" Width="126" HorizontalContentAlignment="Right" BorderBrush="{DynamicResource MaterialDesignShadowBrush}" Grid.Row="2" Margin="0,12,0,0"/>
            <Label Content="Category" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="38" Width="116" HorizontalContentAlignment="Right" BorderBrush="{DynamicResource MaterialDesignShadowBrush}" Margin="10,10,0,0" Grid.Row="3"/>
            <Label Content="in Stock" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="38" Width="98" HorizontalContentAlignment="Right" BorderBrush="{DynamicResource MaterialDesignShadowBrush}" Grid.Column="2"/>
            <TextBox Grid.Column="1" VerticalContentAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="226" FontSize="16" Height="30"/>
            <TextBox Grid.Column="1" VerticalContentAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="226" FontSize="16" Grid.Row="1" Height="30"/>
            <Button Grid.Column="1"
                    Background="Transparent" 
                    BorderBrush="Transparent" 
                    BorderThickness="0"
                    Padding="0" Height="26"
                    Cursor="Hand"
                    Grid.Row="3"
                    Margin="217,0,21,36" VerticalAlignment="Bottom">
                <materialDesign:PackIcon Kind="PlusCircle" Width="24" Height="33" Foreground="Blue" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
            <TextBox
                Height="80"
                VerticalContentAlignment="Top"
                Grid.Row="2"
                Grid.Column="1"
                VerticalAlignment="Center"
                materialDesign:HintAssist.Hint="Product Description here"
                AcceptsReturn="True"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" Margin="19,0,19,0" />
            <TextBox Grid.Column="3" VerticalContentAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="287" FontSize="16" Height="30"/>
            <Label Content="Image" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="38" Width="98" HorizontalContentAlignment="Right" BorderBrush="{DynamicResource MaterialDesignShadowBrush}" Grid.Column="2" Grid.Row="1"/>
            <Image Grid.Column="3" HorizontalAlignment="Left" Height="194" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="281" Grid.RowSpan="3"/>
            <ComboBox FontSize="16" Grid.Column="1" HorizontalAlignment="Left" Margin="21,16,0,0" Grid.Row="3" VerticalAlignment="Top" Width="189" Height="31"/>
        </Grid>
    </Grid>
</UserControl>
