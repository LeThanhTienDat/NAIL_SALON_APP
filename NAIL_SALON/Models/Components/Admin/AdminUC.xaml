<UserControl x:Class="NAIL_SALON.Models.Components.Admin.AdminUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NAIL_SALON.Models.Components.Admin"
             mc:Ignorable="d" 
             xmlns:intbool="clr-namespace:NAIL_SALON.Models.Components"
             d:DesignWidth="800"
             Background="White" d:DesignHeight="200"
             >
    <UserControl.Resources>
        <intbool:IntBoolConverter x:Key="IntToBoolConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="52*"/>
                <RowDefinition Height="52*"/>
                <RowDefinition Height="52*"/>
                <RowDefinition Height="52*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150*"/>
                <ColumnDefinition Width="245*"/>
                <ColumnDefinition Width="113*"/>
                <ColumnDefinition Width="292*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Name" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="38" Width="136" HorizontalContentAlignment="Right" BorderBrush="{DynamicResource MaterialDesignShadowBrush}"/>
            <Label Content="Phone Number" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="38" Width="136" HorizontalContentAlignment="Right" BorderBrush="{DynamicResource MaterialDesignShadowBrush}" Grid.Row="1"/>
            <Label Content="Password" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="38" Width="92" HorizontalContentAlignment="Right" BorderBrush="{DynamicResource MaterialDesignShadowBrush}" Grid.Column="2"/>
            <TextBox Text="{Binding CurrentAdmin.Name, UpdateSourceTrigger=PropertyChanged}" x:Name="inputName" Grid.Column="1" VerticalContentAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="226" FontSize="16" Height="30"/>
            <TextBox Text="{Binding CurrentAdmin.Phone, UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="NumberOnlyTextBox" x:Name="inputPhone" Grid.Column="1" VerticalContentAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="226" FontSize="16" Grid.Row="1" Height="30"/>
            <Label Content="Confirm Pw" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="38" Width="92" HorizontalContentAlignment="Right" BorderBrush="{DynamicResource MaterialDesignShadowBrush}" Grid.Row="1" Grid.Column="2"/>
            <Label Content="Active" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Height="38" Width="92" HorizontalContentAlignment="Right" BorderBrush="{DynamicResource MaterialDesignShadowBrush}" Grid.Row="2" Margin="48,0,0,0"/>
            <CheckBox IsChecked="{Binding CurrentAdmin.Active, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Content="" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="2" VerticalAlignment="Center" FontSize="16"/>
            <PasswordBox PasswordChanged="PasswordBox_PasswordChanged" Grid.Column="3" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Width="234"/>
            <PasswordBox PasswordChanged="PasswordBox_ConfirmPasswordChanged" Grid.Column="3" FontSize="16" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="234"/>

        </Grid>
    </Grid>
</UserControl>
