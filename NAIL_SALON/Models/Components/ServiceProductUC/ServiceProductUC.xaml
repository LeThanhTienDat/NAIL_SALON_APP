<UserControl x:Class="NAIL_SALON.Models.Components.ServiceProductUC.ServiceProductUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NAIL_SALON.Models.Components.ServiceProductUC"
             xmlns:materialDesignExtensions="http://materialdesigninxaml.net/winfx/xaml/extensions"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             Background="#bbdefb"
             d:DesignHeight="450" d:DesignWidth="800"
             >
    
        <DataGrid ItemsSource="{Binding TempServiceProduct}" AutoGenerateColumns="False"
              CanUserAddRows="False" RowHeight="80"
              HorizontalContentAlignment="Center"
              GridLinesVisibility="Horizontal" RowHeaderWidth="0" HeadersVisibility="Column" 
                  Margin="10,10,10,10"
              >

            <DataGrid.Resources>
                <Style TargetType="DataGridCell">
                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <!-- Index column -->
            <DataGridTextColumn Header="No." IsReadOnly="True" Binding="{Binding RowNumber}" >
                <DataGridTextColumn.ElementStyle>
                    <Style TargetType="TextBlock">
                        <Setter Property="TextWrapping" Value="Wrap"/>
                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                        <Setter Property="MaxHeight" Value="80"/>
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </DataGridTextColumn.ElementStyle>
            </DataGridTextColumn>

            <!-- Image column -->
            <DataGridTemplateColumn Header="Image" Width="100" IsReadOnly="True">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <Image Source="{Binding CurrentProductBelong.CurrentImage}" 
                   Width="95" Height="95" 
                   Stretch="UniformToFill"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
                
                
            <!-- Name column -->
            <DataGridTextColumn Header="Name" Binding="{Binding CurrentProductBelong.Name}" IsReadOnly="True" Width="120">
                <DataGridTextColumn.ElementStyle>
                    <Style TargetType="TextBlock">
                        <Setter Property="TextWrapping" Value="Wrap"/>
                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                        <Setter Property="MaxHeight" Value="80"/>
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </DataGridTextColumn.ElementStyle>
            </DataGridTextColumn>

            <!-- Quantity column -->
            <DataGridTemplateColumn Header="Quantity" Width="100">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Quantity}" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
               
                <DataGridTemplateColumn.CellEditingTemplate>
                    <DataTemplate>
                        <xctk:IntegerUpDown Value="{Binding Quantity, Mode=TwoWay}" 
                                Minimum="0" Maximum="99999"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Width="60"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellEditingTemplate>
            </DataGridTemplateColumn>

            <!-- Action column -->
                <DataGridTemplateColumn >
                    <DataGridTemplateColumn.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="Action" HorizontalAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.HeaderTemplate>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Width="50" Margin="0,0,5,0" FontSize="25"
                                Command="{Binding DataContext.RemoveProductCommand,
                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}" >
                                <materialDesign:PackIcon Kind="SelectRemove" />
                            </Button>
                        </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTemplateColumn.HeaderStyle>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
  
</UserControl>
