<Window x:Class="NAIL_SALON.Views.Employer.EditEmployer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NAIL_SALON.Views.Employer"
        mc:Ignorable="d"
        xmlns:emp="clr-namespace:NAIL_SALON.Models.Components.Employer"
        Title="EditEmployer" Height="250" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="181*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>

        <emp:EmployerUC Grid.RowSpan="2" />
        <Button Command="{Binding SaveEditCommand}" Content="Save" HorizontalAlignment="Left" Margin="530,5,0,0" VerticalAlignment="Top" FontSize="16" Width="112" Grid.Row="1" Height="32"/>
        <Button Click="Cancel_Click" Content="Cancel" HorizontalAlignment="Left" Margin="647,5,0,0" VerticalAlignment="Top" FontSize="16" Width="112" Grid.Row="1" Height="32"/>


    </Grid>
</Window>
