<Window x:Class="NAIL_SALON.Views.Product.CreateProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NAIL_SALON.Views.Product"
        xmlns:pro="clr-namespace:NAIL_SALON.Models.Components.Product"
        mc:Ignorable="d"
        Title="CreateProduct" Height="380" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="153*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>

        <pro:ProductUC Grid.Row="0" />
        <Button Command="{Binding CreateProductCommand}" Grid.Row="1" Content="Add" HorizontalAlignment="Left" Margin="525,5,0,0" VerticalAlignment="Top" FontSize="16" Width="112" Height="32"/>
        <Button Grid.Row="1" Content="Cancel" Click="Cancel_Click" HorizontalAlignment="Left" Margin="650,5,0,0" VerticalAlignment="Top" FontSize="16" Width="112" Height="32"/>
    </Grid>
</Window>
