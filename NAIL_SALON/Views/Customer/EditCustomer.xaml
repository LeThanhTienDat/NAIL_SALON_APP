<Window x:Class="NAIL_SALON.Views.Customer.EditCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NAIL_SALON.Views.Customer"
        xmlns:cus="clr-namespace:NAIL_SALON.Models.Components.Customer"
        mc:Ignorable="d"
        Title="EditCustomer" Height="285" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="181*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <cus:CustomerUC Grid.Row="0" Margin="0,1,0,45" Grid.RowSpan="2"/>
        <Grid Grid.Row="1" Margin="0,2,0,0">
            <Button Command="{Binding SaveEditCustomerCommand}" Content="Save" HorizontalAlignment="Left" Margin="509,3,0,0" VerticalAlignment="Top" FontSize="16" Width="112"/>
            <Button Content="Cancel" Click="Cancel_Click" HorizontalAlignment="Left" Margin="634,3,0,0" VerticalAlignment="Top" FontSize="16" Width="117"/>

        </Grid>
    </Grid>
</Window>
